@model ECommerceFrontEnd.Models.CreditCardInformationModel

@{
    ViewData["Title"] = "Credit Card Information";
}

@if (ViewBag.Error != null)
{
    <div class="container">
        <div class="alert alert-danger">
            @ViewBag.Error
        </div>
    </div>
}
else if (ViewBag.SuccessMessage != null)
{
    <div class="container">
        <div class="alert alert-success">
            @ViewBag.SuccessMessage
        </div>
    </div>
}
<br />
<br />
@using (Html.BeginForm())
{
    <div class="form-group">
        <div class="form-group col-md-6">
            <label>Card Number</label>
            @Html.EditorFor(model => model.PAN, new { htmlAttributes = new { @class = "form-control, m-3" } })
        </div>

        <div class="form-group col-md-6">
            <label>CVV</label>
            @Html.EditorFor(model => model.CVV, new { htmlAttributes = new { @class = "form-control, m-3" } })
        </div>
        <div class ="form-group col-md-6">
            <label>Expiration Date</label>
            @Html.TextBoxFor(model=>model.ExpiryDate, new{ @class = "form-control, m-3",Type = "date"})
        </div>

        <input value="Validate" type="submit" class="btn btn-primary" />
    </div>
}